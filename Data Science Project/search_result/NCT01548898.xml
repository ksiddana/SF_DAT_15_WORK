  <brief_title>The Efficacy of Laser Assisted Hair Removal in the Treatment of Acne Keloidalis Nuchae; a Pilot Study</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Cairo University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
